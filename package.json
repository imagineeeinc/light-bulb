{
  "name": "light-bulb",
  "version": "1.0.0",
  "description": "A browser written in JavaScript",
  "main": "application.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -m -l -w",
    "dist-win": "electron-builder --win",
    "dist-win-32": "electron-builder --win --ia32",
    "dist-win-all": "electron-builder --win --ia32 --armv7l --arm64",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imagineeeinc/light-bulb.git"
  },
  "keywords": [
    "browser"
  ],
  "author": "imagineee",
  "license": "mit",
  "bugs": {
    "url": "https://github.com/imagineeeinc/light-bulb/issues"
  },
  "homepage": "https://github.com/imagineeeinc/light-bulb#readme",
  "dependencies": {
    "electron-dl": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0"
  },
  "build": {
    "appId": "light bulb",
    "productName": "light bulb browser",
    "copyright": "Copyright Â© 2021 Imagineee",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "target": [
        "default",
        "dmg",
        "zip"
      ]
    },
    "win": {
      "publisherName": "Imagineee",
      "target": [
        "portable",
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "category": "Browser",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        "apk",
        "zip"
      ]
    }
  }
}
